    "reveal.js": "^5.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@arinoto/cdk-arch": "0.5.0",
    "@revint/arch": "*",
    "qrcode": "^1.5.3"
  },
  "peerDependencies": {
    "reveal.js": "^5.0.0"
  },
  "files": [
    "dist"
  ]
