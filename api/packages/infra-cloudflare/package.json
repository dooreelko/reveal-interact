{
  "name": "@revint/infra-cloudflare",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:workers": "npm run build && node scripts/bundle-workers.js",
    "clean": "rm -rf dist",
    "synth": "cdktf synth",
    "deploy": "npm run build:workers && CLOUDFLARE_API_TOKEN=$(npx --yes wrangler auth token --json | jq -r .token) cdktf deploy --auto-approve",
    "destroy": "cdktf destroy --auto-approve",
    "test:e2e": "./scripts/e2e-test.sh"
  },
  "dependencies": {
    "@arinoto/cdk-arch": "0.5.0",
    "@cdktf/provider-cloudflare": "^13.9.1",
    "@revint/arch": "*",
    "cdktf": "^0.20.0",
    "constructs": "^10.3.0"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-commonjs": "^0.18.0",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^20.0.0",
    "cdktf-cli": "^0.20.0",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
