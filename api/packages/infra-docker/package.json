{
  "name": "@revint/infra-docker",
  "version": "0.0.1",
  "description": "Local Docker deployment for reveal-interact",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:docker": "npm run build && node scripts/bundle.js",
    "clean": "rm -rf dist",
    "synth": "cdktf synth",
    "deploy": "npm run build:docker && cdktf deploy --auto-approve",
    "destroy": "cdktf destroy --auto-approve",
    "test:e2e": "./scripts/e2e-test.sh"
  },
  "dependencies": {
    "@arinoto/cdk-arch": "0.5.0",
    "@cdktf/provider-docker": "^11.0.0",
    "@revint/arch": "*",
    "cdktf": "^0.20.0",
    "constructs": "^10.3.0",
    "express": "^5.0.0",
    "pg": "^8.11.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/ws": "^8.5.0",
    "cdktf-cli": "^0.20.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  }
}
