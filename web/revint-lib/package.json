{
  "name": "@revint/lib",
  "version": "0.1.0",
  "description": "Client library for Reveal-Interact audience participation",
  "main": "./dist/revint-lib.js",
  "module": "./dist/revint-lib.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/revint-lib.esm.js",
      "require": "./dist/revint-lib.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:bundle",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bundle": "node scripts/bundle.js",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@arinoto/cdk-arch": "0.5.0",
    "@revint/arch": "*"
  },
  "keywords": [
    "reveal",
    "presentation",
    "audience",
    "interaction",
    "websocket"
  ],
  "license": "MIT"
}
